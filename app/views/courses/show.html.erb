<% if user_signed_in? %>
  <%= render 'layouts/nav' %>
<% end %>
<div class="card w-80">
  <h1 class="card-header text-center"><%= @course.name %></h5>
  <div class="card-body">
    <h5 class="card-title text-center text-muted"><%= " #{@course.city}, #{@course.state} " %></h5>

    <table class="table table-striped table-hover table-sm">
      <tbody>
      <% @course.variants.each do |variant| %>
        <% parset = variant.pars.split('') %>
        <tr class="fs-4">
          <td colspan="5">
              <%= link_to variant.name, edit_variant_path(variant.id, :course_id => @course.id), class:"btn btn-success" %>
          </td>
          <td colspan="5">
              <%# link_to "Play a Round", new_card_path( variant_id: variant.id ), class:"btn btn-warning" %>
          </td>
        </tr>
        <tr class="align-middle fs-4">
          <% (0..8).each do |i| %>
            <td><%= parset[i] %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>

    <div class="row">
      <div class="d-grid gap-2">
        <%= link_to "Add a Layout", new_variant_path(:course_id => @course.id), class:"btn btn-outline-success mb-3" %>
        <%= link_to "Edit this course", edit_course_path, class:"btn btn-outline-warning mb-3" %>
        <%= link_to "Course list", courses_path, class:"btn btn-outline-dark mb-3" %>
      </div>
      <div class="col align-self-end">
        <%= button_to "Delete", @course, method: :delete, class:"btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>