<br><br>
<h1>My Courses</h1>

<div id="courses">
     <table class="table table-striped table-hover w-80">
       <thead scope;="row" style="background-color: #11d47c;">
         <tr>
           <th scope="col" class="text-white">Name</th>
           <th scope="col" class="text-white">City</th>
           <th scope="col" class="text-white">State</th>           
         </tr>
       </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.name, course, class:"link-secondary" %></td>
            <td><%= course.city %></td>
            <td><%= course.state %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
</div>

<%= link_to "New course", new_course_path, class:"btn btn-success" %>