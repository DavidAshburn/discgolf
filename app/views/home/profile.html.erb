<div class="px-4 py-5 my-0 text-center">
    <div class="row">
      <div class="col-sm-2"><%= image_tag('disc.jpg', class: "d-block mx-auto mb-4", width: '90', height: '90') %></div>
      <h1 class="display-3 fw-bold col-sm-4 mt-2"><%= current_user.email %></h1>
    </div>
    
    <h1 class="mt-4">Recent Cards</h1>
    <table class="table">
      <thead>
        <th scope="col">Course</th>
        <th scope="col">Par</th>
        <th scope="col">Score</th>
