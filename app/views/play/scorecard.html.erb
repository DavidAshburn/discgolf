<div class="card text-center"  data-controller="grandmother">
	<div style="display:none;"> 
		<p data-grandmother-target="one"><%= @par_list[0] %></p>
		<p data-grandmother-target="two"><%= @par_list[1] %></p>
		<p data-grandmother-target="three"><%= @par_list[2] %></p>
		<p data-grandmother-target="four"><%= @par_list[3] %></p>
		<p data-grandmother-target="five"><%= @par_list[4] %></p>
		<p data-grandmother-target="six"><%= @par_list[5] %></p>
		<p data-grandmother-target="seven"><%= @par_list[6] %></p>
		<p data-grandmother-target="eight"><%= @par_list[7] %></p>
		<p data-grandmother-target="nine"><%= @par_list[8] %></p>
	</div>

  <div class="card-header">
    <%= "#{Course.find_by(id: @variant.course_id).name}" %>
  </div>
  <div class="card-body">
  	<div class="row mb-2">
    	<h5 class="card-title"> <%= "#{@variant.name}" %></h5>
    </div>
    <div class="row mb-2">
    	<div class="col-4">
    		<p>Par: <span data-grandmother-target="thispar"></span></p>
    	</div>
    	<div class="col-4">
    		<p>Hole: <span data-grandmother-target="thishole"></span></p>
    	</div>
    	<div class="col-4">
    		<p>Score: <span data-grandmother-target="thisscore"></span></p>
    	</div>
    </div>
    <div class="row mb-2">
	   	<div class="btn-group" role="group" aria-label="Basic example">
  			<button type="button" class="btn btn-primary bg-gradient" data-action="grandmother#shotInc">Throw</button>
	 			<button type="button" class="btn btn-secondary bg-gradient" data-action="grandmother#shotUndo">Undo</button>
			</div>
		</div>
	<br>
	<div class="row">
	  <div class="btn-group" role="group" aria-label="Basic example">
  		<button type="button" class="btn btn-success bg-gradient" data-action="click->grandmother#holeInc">Next</button>
		</div>
  </div>
  <div class="row">
  	<td> 1: <span data-grandmother-target="scoreOne"></span></td>
  	<td> 2: <span data-grandmother-target="scoreTwo"></td>
  	<td> 3: <span data-grandmother-target="scoreThree"></td>
  	<td> 4: <span data-grandmother-target="scoreFour"></td>
  	<td> 5: <span data-grandmother-target="scoreFive"></td>
  	<td> 6: <span data-grandmother-target="scoreSix"></td>
  	<td> 7: <span data-grandmother-target="scoreSeven"></td>
  	<td> 8: <span data-grandmother-target="scoreEight"></td>
  	<td> 9: <span data-grandmother-target="scoreNine"></td>
  	<td> T: <span data-grandmother-target="total"></td>
  </div>
