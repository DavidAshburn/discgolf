<br><br>
<div class="card text-center" data-controller="grandmother composer architect">
	<div data-grandmother-target="par_list">
		<% @par_list.each do |x| %>
			<p class="par_list"><%= x %></p>
		<% end %>
	</div>

  <div class="card-header">
    <%= "#{Course.find_by(id: @variant.course_id).name}" %>
  </div>
  <div class="card-body">
  	<div class="row mb-2">
    	<h5 class="card-title"> <%= "#{@variant.name}" %></h5>
    </div>
    <div class="row mb-2">
    	<div class="col-4">
    		<p>Par: <span data-grandmother-target="this-par"></span></p>
    	</div>
    	<div class="col-4">
    		<p>Hole: <span data-grandmother-target="this_hole"></span></p>
    	</div>
    	<div class="col-4">
    		<p>Score: <span data-grandmother-target="this_score"></span></p>
    	</div>
    </div>

    <div class="container-sm">
    	<div class="row mb-1">
	    	<div class="btn-group" role="group" aria-label="First 3 shots">
	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="one">1</button>

	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="two">2</button>

	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="three">3</button>
	  			
			</div>
		</div>
		<div class="row mb-1">
	    	<div class="btn-group" role="group" aria-label="Second 3 shots">
	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="four">4</button>

	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="five">5</button>

	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="six">6</button>
	  			
			</div>
		</div>
		<div class="row">
	    	<div class="btn-group" role="group" aria-label="Third 3 shots">
	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="seven">7</button>

	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="eight">8</button>
	  			
	  			<button type="button" class="btn btn-primary bg-gradient" data-architect-target="nine">9</button>
	  			 
			</div>
		</div>
  </div>
  <div class="card-footer text-muted">
  	<div class="row mb-4">
	    <div class="btn-group" role="group" aria-label="Basic example">
  			<button type="button" class="btn btn-primary bg-gradient"		
  			 data-action="click->composer#writeDrive">Drive</button>

  			<button type="button" class="btn btn-secondary bg-gradient"	
  			 data-action="click->composer#writeMid">Mid</button>

  			<button type="button" class="btn btn-info bg-gradient"			
  			 data-action="click->composer#writePutt">Putt</button>

  			<button type="button" class="btn btn-warning bg-gradient"		
  			 data-action="click->composer#writeFault">Fault</button>
			</div>
		</div>
	</div>
	<div class="table-group-divider"></div>
	<br>
	<div class="row">
	   	<div class="btn-group" role="group" aria-label="Basic example">
  			<button type="button" class="btn btn-secondary bg-gradient">Last</button>
  			<button type="button" class="btn btn-primary bg-gradient">Card</button>
  			<button type="button" class="btn btn-success bg-gradient">Next</button>
		</div>
	</div>
	<div>
		<button data-action="click->grandmother#printPar">parprint</button>
		<p><span data-grandmother-target="parset"></span></p>
	</div>
</div>
