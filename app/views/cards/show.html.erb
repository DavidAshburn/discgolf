
<div data-controller="reporter">
  <% thiscourse = Course.find_by(id: @card.course_id) %>
  <% thisvariant = Variant.find_by(id: @card.variant_id) %>
  <div style="display: none;">
    <p data-reporter-target="shotstring"> <%= @card.shots %> </p>
  </div>
  <br><br>
  <div class="card w-80">
    <h1 class="card-header text-center"><%= thiscourse.name %></h1>
    <div class="card-body">
      <h5 class="card-title text-center text-muted"><%= thisvariant.name %></h5>

      <table class="table table-success">
        <thead>
          <tr>
            <th scope="col">1</th>
            <th scope="col">2</th>
            <th scope="col">3</th>
            <th scope="col">4</th>
            <th scope="col">5</th>
            <th scope="col">6</th>
            <th scope="col">7</th>
            <th scope="col">8</th>
            <th scope="col">9</th>
            <th scope="col">T</th>
          </tr>
          <tr> <!-- taking data from the cards_controller into reporter_controller.js here -->
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.one %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.two %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.three %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.four %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.five %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.six %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.seven %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.eight %></th>
            <th scope="col" data-reporter-target="holepar"><%= thisvariant.nine %></th>
            <th scope="col" data-reporter-target="totalpar"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="score"></td>
            <td data-reporter-target="total"></td>
          </tr>
        </tbody>
      </table>

      <br>

      <div class="row">
        <div class="d-grid gap-2">
          <%= link_to "Card list", cards_path, class:"btn btn-outline-dark mb-3" %>
        </div>
        <div class="col align-self-end">
          <%= button_to "Delete", @card, method: :delete, class:"btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>