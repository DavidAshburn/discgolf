<br><br>

<div class="card text-center"  data-controller="grandmother">
  <div style="display:none;"> 
    <p data-grandmother-target="par"><%= @par_list[0] %></p>
    <p data-grandmother-target="par"><%= @par_list[1] %></p>
    <p data-grandmother-target="par"><%= @par_list[2] %></p>
    <p data-grandmother-target="par"><%= @par_list[3] %></p>
    <p data-grandmother-target="par"><%= @par_list[4] %></p>
    <p data-grandmother-target="par"><%= @par_list[5] %></p>
    <p data-grandmother-target="par"><%= @par_list[6] %></p>
    <p data-grandmother-target="par"><%= @par_list[7] %></p>
    <p data-grandmother-target="par"><%= @par_list[8] %></p>
  </div>

  <div class="card-header">
    <%= "#{Course.find_by(id: @variant.course_id).name}" %>
  </div>
  <div class="card-body">
    <div class="row mb-2">
      <h5 class="card-title"> <%= "#{@variant.name}" %></h5>
    </div>
    <div class="row mb-2">
      <div class="col-4">
        <p data-grandmother-target="parlabel"><span data-grandmother-target="thispar"></span></p>
      </div>
      <div class="col-4">
        <p data-grandmother-target="holelabel"><span data-grandmother-target="thishole"></span></p>
      </div>
      <div class="col-4">
        <p data-grandmother-target="scorelabel"><span data-grandmother-target="thisscore"></span></p>
      </div>
    </div>
    <div class="row mb-2">
      <div class="btn-group" role="group" aria-label="Throws">
        <%# <button type="button" class="btn btn-primary bg-gradient" data-action="grandmother#shotInc">Throw</button> %>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
          Throw
        </button>
        <button type="button" class="btn btn-secondary bg-gradient" data-action="grandmother#shotUndo">Undo</button>
      </div>
    </div>
    <div class="row mb-2">
      <div class="btn-group" role="group" aria-label="Holes">
        <button type="button" class="btn btn-secondary bg-gradient" data-action="grandmother#holePrevious">Back</button>
        <button type="button" class="btn btn-success bg-gradient" data-action="grandmother#holeInc">Next</button>
      </div>
    </div>
    <br>
    <table class="table table-success">
      <thead>
        <tr>
          <th scope="col">1</th>
          <th scope="col">2</th>
          <th scope="col">3</th>
          <th scope="col">4</th>
          <th scope="col">5</th>
          <th scope="col">6</th>
          <th scope="col">7</th>
          <th scope="col">8</th>
          <th scope="col">9</th>
          <th scope="col">T</th>
        </tr>
        <tr>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="pardisplay"></th>
          <th scope="col" data-grandmother-target="totalpar"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="score"></td>
          <td data-grandmother-target="total"></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= form_with model: @card do |form| %>
    <% if @card.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

        <ul>
          <% @card.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.text_area :score, data: {target: "grandmother.scoreout" } %>
    </div>

    <div>
      <%= form.text_area :shots, data: {target: "grandmother.shotsout" } %>
    </div>

    <div>
      <%= form.number_field :user_id, id: :card_user_id, value:current_user.id %>
    </div>

    <div>
      <%= form.number_field :variant_id, id: :card_variant_id, value:@variant.id %>
    </div>

    <div>
      <%= form.number_field :course_id, id: :card_course_id, value:Course.find_by(id: @variant.course_id).id %>
    </div>

    <div>
      <button type="submit" class="btn btn-primary">Finalize</button>
    </div>
  <% end %>

  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Choose Your Lie</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row mb-5">
            <div class="btn-group" role="group" aria-label="Throws">
              <button type="button" class="btn btn-success" data-action="grandmother#shotInc grandmother#writeBasket" data-bs-dismiss="modal">
                Basket
              </button>
              <button type="button" class="btn btn-outline-success" data-action="grandmother#shotInc grandmother#writeCircleOne" data-bs-dismiss="modal">
                Circle 1
              </button>
              <button type="button" class="btn btn-success" data-action="grandmother#shotInc grandmother#writeCircleTwo" data-bs-dismiss="modal">
                Circle 2
              </button>
            </div>
          </div>
          <div class="row mb-2">
            <div class="btn-group" role="group" aria-label="Throws">
              <button type="button" class="btn btn-primary" data-action="grandmother#shotInc grandmother#writeFairway" data-bs-dismiss="modal">
                Fairway
              </button>
              <button type="button" class="btn btn-outline-primary" data-action="grandmother#shotInc grandmother#writeOffFairway" data-bs-dismiss="modal">
                Off Fairway
              </button>
              <button type="button" class="btn btn-warning" data-action="grandmother#shotInc grandmother#writePenalty" data-bs-dismiss="modal">
                Penalty
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


